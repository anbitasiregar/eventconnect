{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@eventconnect/shared-types": ["./packages/shared-types/src"],
      "@eventconnect/sheets-templates": ["./packages/sheets-templates/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
